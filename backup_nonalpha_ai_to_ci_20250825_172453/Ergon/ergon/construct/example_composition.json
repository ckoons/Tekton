{
  "name": "AI Analysis Pipeline",
  "version": "1.0.0",
  "description": "Combines parser, analyzer, and reporter components",
  "type": "solution",
  
  "components": [
    {
      "source": "registry:abc123",
      "alias": "parser",
      "config": {
        "input_format": "markdown",
        "output_format": "json"
      }
    },
    {
      "source": "registry:def456", 
      "alias": "analyzer",
      "config": {
        "model": "gpt-4",
        "temperature": 0.7
      }
    },
    {
      "source": "registry:ghi789",
      "alias": "reporter",
      "config": {
        "format": "html",
        "include_charts": true
      }
    }
  ],
  
  "connections": [
    {
      "from": "parser.output",
      "to": "analyzer.input",
      "transform": "json_to_text"
    },
    {
      "from": "analyzer.results",
      "to": "reporter.data",
      "transform": null
    }
  ],
  
  "orchestration": {
    "type": "sequential",
    "error_handling": "stop_on_error",
    "timeout": 300
  },
  
  "resources": {
    "memory": "4g",
    "cpu": 2,
    "requires_gpu": false
  },
  
  "output": {
    "primary": "reporter.report",
    "artifacts": ["analyzer.logs", "parser.metrics"]
  }
}