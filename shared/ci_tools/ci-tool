#!/usr/bin/env python3
"""
ci-tool - CI messaging wrapper executable
"""

import sys
import os

# Add TEKTON_ROOT to Python path
script_dir = os.path.dirname(os.path.realpath(__file__))
# Go up from shared/ci_tools to root
tekton_root = os.path.dirname(os.path.dirname(script_dir))
sys.path.insert(0, tekton_root)

# Import and run the wrapper
from shared.ci_tools.ci_message_wrapper_aish import main

if __name__ == "__main__":
    sys.exit(main())